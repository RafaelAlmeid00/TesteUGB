@model UGB.Data.Serviço
@using Newtonsoft.Json
@using UGB.Factory
@using UGB.Interface
@{
    ViewData["Title"] = "Delete";

    var usuarioFactory = new UsuarioFactory();
    var usuario = usuarioFactory.Create() as IUsuario;

    @if (TempData["Usuario"] != null)
    {
        usuario = JsonConvert.DeserializeObject<Usuario>(TempData["Usuario"].ToString());
    }


    <h1>Deletar</h1>

    <h3>Tem certeza que quer deletar esse serviço?</h3>
    <div>
        <h4>Serviço</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Serviço
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServNome)
            </dd>
            <dt class="col-sm-2">
                Descrição
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServDescricao)
            </dd>
            <dt class="col-sm-2">
                Prazo em Dias
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.ServPrazo)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="ServId" />
            <input type="hidden" asp-for="FornecedorFornecedorCnpj" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index">Voltar</a>
        </form>
    </div>
}