@model UGB.Data.PedidoInterno
@using Newtonsoft.Json
@using UGB.Factory
@using UGB.Interface
@{
    ViewData["Title"] = "Delete";

    var usuarioFactory = new UsuarioFactory();
    var usuario = usuarioFactory.Create() as IUsuario;

    @if (TempData["Usuario"] != null)
    {
        usuario = JsonConvert.DeserializeObject<Usuario>(TempData["Usuario"].ToString());
    }

<h1>Deletar</h1>

<h3>Tem certeza que quer deletar esse usuário?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
           Quantidade
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PedidoQuantidade)
        </dd>
        <dt class="col-sm-2">
            Data
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PedidoData)
        </dd>
        <dt class="col-sm-2">
           Produto EAN
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoProdEan)
        </dd>
        <dt class="col-sm-2">
            ID Serviço
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ServicoServId)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="PedidoId" />
        <input type="hidden" asp-for="UsuarioUserMat" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar</a>
    </form>
</div>
}